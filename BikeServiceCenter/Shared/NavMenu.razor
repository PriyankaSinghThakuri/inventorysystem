@using BikeServiceCenter.Data;

<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">BikeServiceCenter</a>
		<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
	</div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
	<nav class="flex-column">
		<div class="nav-item px-3"><h5 class="text-light">Welcome <strong>@Username</strong>!</h5></div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="staffInventory">
				<span class="oi oi-person" /> Staff Inventory
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="approvedLog">
				<span class="oi oi-person" /> Approved Items
			</NavLink>
		</div>

		@if (UserRole == Role.Admin)
		{
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="items">
					<span class="oi oi-list-rich" aria-hidden="true"></span> Items
				</NavLink>
			</div>
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="dashboard">
					<span class="oi oi-bar-chart" aria-hidden="true"></span> Dashboard
				</NavLink>
			</div>
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="users">
					<span class="oi oi-person" /> Users
				</NavLink>
			</div>
			<div class="nav-item px-3">
			<NavLink class="nav-link" href="withdrawnItem">
				<span class="oi oi-comment-square" /> Requests
			</NavLink>
		</div>
			
		}
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="changepassword">
				<span class="oi oi-key" aria-hidden="true"></span> Change Password
			</NavLink>
		</div>
			<div class="nav-item px-3">
			<NavLink class="nav-link text-danger" role="button" @onclick="LogoutHandler">
				<span class="oi oi-account-logout" /> Logout
			</NavLink>
		</div>
	</nav>
</div>

@code {
	[Parameter]
	public string Username { get; set; }
	[Parameter]
	public Role UserRole { get; set; }
	[Parameter]
	public EventCallback LogoutHandler { get; set; }
	private bool collapseNavMenu = true;

	private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}
